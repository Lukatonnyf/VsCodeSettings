datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")  // A URL de conexão com o MongoDB
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id       String @id @default(auto()) @map("_id") // MongoDB usa _id como chave primária
  name     String
  feedback String
}
